{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++: Build Server",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++2a",
                "-lpthread",
                "-I'include'",
                "-g",
                "main.cpp",
                "server.cpp",
                "client_handler.cpp",
                "controller.cpp",
                "client.cpp",
                "wrappers.cpp",
                "user_db_handle.cpp",
                "user.cpp",
                "lib/sqlite3.o",
                "-o",
                "server"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task created by kubs."
        },
        {
            "type": "cppbuild",
            "label": "C++: Build Client Helper",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++2a",
                "-lpthread",
                "-I'include'",
                "-g",
                "client_.cxx",
                "wrappers.cpp",
                "-o",
                "client"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task created by kubs."
        }
    ]
}